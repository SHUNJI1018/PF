
<div class="sign-up">
<h3 class="sign-up__title">新規会員登録</h3>
  <%= form_with model: @customer, url:customer_registration_path, local:true do |f| %>
    <table class="sign-up__form">
      <tr>
        <td><%= f.label :"ニックネーム" %></td>
        <td><%= f.text_field :nickname, placeholder: "ニックネーム", class: "nickname" %></td>
      </tr>
      <tr>
        <td><%= f.label :"名前" %></td>
        <td><%= f.text_field :last_name, placeholder: "姓", class: "last_name" %></td>
        <td><%= f.text_field :first_name, placeholder: "名", class: "first_name" %></td>
      </tr>
      <tr>
        <td><%= f.label :"フリガナ" %></td>
        <td><%= f.text_field :last_kana_name, placeholder: "セイ", class: "last_kana_name"%></td>
        <td><%= f.text_field :first_kana_name,  placeholder: "メイ", class: "first_kana_name" %></td>
       </tr>
      <tr>
        <td><%= f.label :"メールアドレス", class: "email" %></td>
        <td><%= f.email_field :email, autocomplete: "email", placeholder: "sample@sample.com", class: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(6文字以上)", class: "password" %></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :"パスワード(確認用)", class: "password" %></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.submit "新規登録" %></td>
      </tr>
    </table>
  <% end %>
  <div class="sign-up__link">
    <%= link_to "すでに登録済の方はこちら", new_customer_session_path %>
  </div>
</div>
<div class="my-page">
<h1>MY PAGE</h1>
  <h4>
    <strong>登録情報</strong>
    <%= link_to edit_customer_path(current_customer) do %>
      <i class="fas fa-user-cog"></i>
    <% end %>
  </h4>

  <table>
    <tbody>
      <tr>
        <td>ニックネーム</td>
        <td><%= customer.nickname %></td>
      </tr>
      <tr>
        <td>氏名</td>
        <td><%= customer.last_name %>　<%= customer.first_name %></td>
      </tr>
      <tr>
        <td>カナ</td>
        <td><%= customer.last_kana_name %>　<%= customer.first_kana_name %></td>
      </tr>
      <tr>
      <tr>
        <td>メールアドレス</td>
        <td><%= customer.email %></td>
      </tr>
      <tr>
        <td><strong><%= customer.followings.count %></strong></td>
        <td>
          <%= link_to "フォロー中", customer_followings_path(customer) %>
        </td>
      </tr>
      <tr>
        <td><strong><%= customer.followers.count %></strong></td>
        <td>
          <%= link_to "フォロワー", customer_followers_path(customer) %>
        </td>
      </tr>
    </tbody>
  </table>
</div>

  <div class="main-1">
    <div class="my-diys">
      <%= render 'public/diys/diys', diys: @diys %>
    </div>
  </div>